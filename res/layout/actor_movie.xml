<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/actor_movie"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
      >
    
<LinearLayout
    
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start">
    
      <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:text=""
        android:layout_marginBottom="60dp"
        android:textSize="10sp" />
      
     
    
    <LinearLayout
     android:id="@+id/am_rightbottom"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
     >
          <!--  Actor  -->
     
      <LinearLayout
    
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    
     >
     
      <ImageView
        android:id="@+id/imageActor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"/>
  </LinearLayout>
  
       <LinearLayout
     android:id="@+id/am_leftbottom"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginRight="0dp"
    android:layout_marginEnd="0dp"
     
     >
     
      <TextView
        android:id="@+id/actorspec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:text="@string/actorspec"
        android:fontFamily="default"
        android:textStyle="normal"
        android:textSize="20sp" />

       
  
    
    
      
    <!--  other infos about the actor-->
    
    <TextView
        android:id="@+id/actorbirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:fontFamily="default"
        android:textStyle="normal"
        android:textSize="20sp" />

   <TextView
        android:id="@+id/actornatio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:fontFamily="default"
        android:textStyle="normal"
        android:textSize="20sp" />
    
    <!--  <TextView
        android:id="@+id/actorweb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="20sp" />-->
        
     </LinearLayout>    
  </LinearLayout> 	
	
    <LinearLayout
     android:id="@+id/am_righttop"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    
     >
    
	<!--  Movie  -->
		 
		 
      <LinearLayout
    
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    
     >
    
	<ImageView
        android:id="@+id/imageMovie"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"/>
	</LinearLayout>
	
	 <LinearLayout
     android:id="@+id/am_lefttop"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginRight="0dp"
    android:layout_marginEnd="0dp"
    
     >
     
     <TextView
        android:id="@+id/moviespec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:text="@string/moviespec"
        android:fontFamily="default"
        android:textStyle="normal"
        android:textSize="20sp" />
	
     
   <!--  other infos about the movie -->

    <TextView
        android:id="@+id/movierelease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:fontFamily="default"
        android:textStyle="normal"
        android:textSize="20sp" />
    
   <TextView
        android:id="@+id/moviegenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:fontFamily="default"
        android:textStyle="normal"
        android:textSize="20sp" />
   
   <TextView
        android:id="@+id/moviecountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="5dp"
        android:fontFamily="default"
        android:textStyle="normal"
        android:textSize="20sp" />
    
   <!--  <TextView
        android:id="@+id/movieweb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:textSize="20sp"  />-->
  
  
   
   </LinearLayout>
   
  
   </LinearLayout>
   
   
</LinearLayout>

</ScrollView>
